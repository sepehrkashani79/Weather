<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34Â°"
                style="@style/textViewMain"
                android:textSize="50sp"
                android:id="@+id/txtDegree"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                style="@style/textViewMain"
                android:id="@+id/txtDegreeUnit"
                android:textSize="30sp"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCurrentWeatherCondition"
            android:textSize="45sp"
            android:text="Cloudy"
            style="@style/textViewMain"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cloudy"
            android:id="@+id/imgCurrentweatherCondition"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:padding="10dp"
            android:text="Tehran"
            android:id="@+id/txtLocation"
            android:textColor="#6DBBFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hourly Forecast: "
            style="@style/textViewMain"
            android:textSize="30sp"
            android:layout_gravity="left"
            android:padding="5dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hourlyForCastRecycler"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Forecast: "
            style="@style/textViewMain"
            android:textSize="30sp"
            android:layout_gravity="left"
            android:padding="5dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dailyForCastRecycler"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="270dp"
        android:background="@android:color/darker_gray"
        android:layout_gravity="left"
        android:layout_height="match_parent"></LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>